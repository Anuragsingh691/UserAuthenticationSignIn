<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity"
        android:background="@color/white">

        <TextView
            android:id="@+id/greetingText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/manReading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basier_circle_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/manReading"
            android:textSize="@dimen/text_size_bold_700"
            android:textColor="@color/green_200"
            android:padding="20dp"
            tools:text="Good Afternoon, \nAnurag"/>

        <ImageView
            android:id="@+id/manReading"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_100"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_100"
            android:src="@drawable/man_reading_img"/>

        <ProgressBar
            android:id="@+id/progress_Bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate = "true"
            android:max="100"
            tools:visibility="visible"
            android:minWidth="200dp"
            android:minHeight="50dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:progress="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/bookIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/manReading"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_start_200"
            android:layout_marginStart="@dimen/margin_start_200"
            android:src="@drawable/ic_open_book"/>

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/manReading"
            android:layout_marginTop="@dimen/margin_start_200"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_start_200"
            android:src="@drawable/ic_search_book"/>

        <TextView
            android:id="@+id/bookStoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bookIcon"
            android:layout_marginTop="@dimen/margin_100"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_start_200"
            android:fontFamily="@font/basier_circle_medium"
            android:textSize="@dimen/text_size_regular_800"
            android:textColor="@color/black_200"
            android:text="@string/book_store_title"/>

        <TextView
            android:id="@+id/sortByTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bookStoreTitle"
            android:layout_marginTop="@dimen/margin_start_200"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_start_200"
            android:fontFamily="@font/basier_circle_medium"
            android:textSize="@dimen/text_size_regular_800"
            android:textColor="@color/black_200"
            android:text="@string/sort_by"/>

        <LinearLayout
            android:id="@+id/sortLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sortByTitle"
            app:layout_constraintTop_toBottomOf="@id/bookStoreTitle"
            android:layout_marginTop="@dimen/margin_100"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">

            <include
                android:id="@+id/bookTitleSort"
                layout="@layout/sort_item_cards"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_100"
                android:layout_marginStart="@dimen/margin_100"
                app:layout_constraintStart_toEndOf="@id/sortByTitle"
                app:layout_constraintTop_toBottomOf="@id/bookStoreTitle"/>

            <include
                android:id="@+id/bookHitSort"
                layout="@layout/sort_item_cards"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/bookStoreTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_100"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_start_200" />

            <include
                android:id="@+id/bookFavSort"
                layout="@layout/sort_item_cards"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/bookStoreTitle"
                android:layout_marginTop="@dimen/margin_100"
                app:layout_constraintStart_toEndOf="@id/bookHitSort"
                android:layout_marginStart="40dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/book_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="10"
            android:background="@color/white"
            tools:listitem="@layout/book_item"
            app:layout_constraintTop_toBottomOf="@id/sortLayout"
            android:layout_marginTop="@dimen/margin_start_200"
            android:layout_marginHorizontal="@dimen/margin_start_200"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>